@using RecOutletWarehouse.HtmlHelpers;
@model RecOutletWarehouse.Models.VENDOR

@{
    ViewBag.Title = "VendorDetail";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>@Html.DisplayFor(model => model.VendorName) - Details</h2>

<fieldset>
    <legend>Vendor Information</legend>

        @if (Model.ContactName.IsEmpty()) {
            <div class="notspecified">There is no specific contact person for this vendor.</div>

        }
        else{
            <div class="detail-field-header">
                 Contact Person
            </div>
            <div class="detail-field-value">
                @Html.DisplayFor(model => model.ContactName)
            </div>
        }
        <div class="detail-field-header">
                Vendor / Contact Person's Phone
        </div>
        <div class="detail-field-value">
            @Html.DisplayFor(model => model.ContactPhone)
        </div>

        @if(!Model.ContactFax.IsEmpty()){
            <div class="detail-field-header">
                 Vendor / Contact Person's Fax
            </div>
            <div class="detail-field-value">
                @Html.DisplayFor(model => model.ContactFax)
            </div>
        }

        @if(!Model.AltPhone.IsEmpty()){
            <div class="detail-field-header">
                 Vendor's Alternate Phone
            </div>
            <div class="detail-field-value">
                @Html.DisplayFor(model => model.AltPhone)
            </div>
        }

    
    <div class="detail-field-header">
        Address
    </div>

    <div class="detail-field-value">
        @Html.DisplayFor(model => model.VendorName)
    </div>

    <div class="detail-field-value">
        @Html.DisplayFor(model => model.VendorAddress)
    </div>

    <div class="detail-field-value">
        @Html.DisplayFor(model => model.VendorAddress2)
    </div>

    <div class="detail-field-value">
        @Html.DisplayFor(model => model.VendorCity)
        @Html.DisplayFor(model => model.VendorState)
        @Html.DisplayFor(model => model.VendorCountry)
        @Html.DisplayFor(model => model.VendorZip)
    </div>

    <div class="detail-field-header">
         Corporate Website
    </div>
    <div class="detail-field-value">
        @Html.SimpleExternalLink(Model.VendorWebsite, Model.VendorWebsite, true) (link opens in a new tab)
    </div>
</fieldset>
<p>
    @Html.ActionLink("Edit", "Edit", new { id=Model.VendorID }) |
    @Html.ActionLink("Back to List", "BrowseVendors")
</p>
