@model RecOutletWarehouse.Models.PRODUCT_LINE

@{
    ViewBag.Title = "ProductLineDetail";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>@Html.DisplayFor(model => model.ProductLineName) - Details</h2>

<fieldset>
    <legend>Product Line Information</legend>

    <div class="detail-field-header">
         Product Line Name (ID)
    </div>
    <div class="detail-field-value">
        @Html.DisplayFor(model => model.ProductLineName) (@Html.DisplayFor(model => model.ProductLineID))
    </div>

    <div class="detail-field-header">
         Vendor Name (ID)
    </div>
    <div class="detail-field-value">
        @Html.DisplayFor(model => model.VENDOR.VendorName) (@Html.DisplayFor(model => model.VendorID))
    </div>

    <div class="detail-field-header">
         Sales Rep Name (ID)
    </div>
    <div class="detail-field-value">
        @Html.DisplayFor(model => model.SALES_REP.SalesRepFirstName) @Html.DisplayFor(model => model.SALES_REP.SalesRepLastName) (@Html.DisplayFor(model => model.SALES_REP.RepID))
    </div>

</fieldset>
<p>
    @Html.ActionLink("Edit", "EditProductLine", new { id = Model.ProductLineID }) |
    <input type="button" value="Back to List"  class="button"
                onclick="location.href='@Url.Action("BrowseVendors","Vendor")'" />
</p>
