@model RecOutletWarehouse.Controllers.PurchaseOrderController.PurchaseOrderCreationViewModel

@{
    ViewBag.Title = "POSummary";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>Purchase Order Summary</h2>
<fieldset>
    <legend>Purchase Order General Information</legend>
    <table>
        <tr>
            <td>PO #:</td>
            <td>@Html.DisplayFor(model => model.PO.PurchaseOrderId)</td>
            <td>Vendor:</td>
            <td>@Html.DisplayFor(model => model.PO.VendorId) (TODO: show vendor name)</td>
        </tr>
        <tr>
            <td>PO ordered on:</td>
            <td>@Html.DisplayFor(model => model.PO.OrderDate)</td>
            <td>PO estimated ship date: </td>
            <td>@Html.DisplayFor(model => model.PO.EstShipDate)</td>
        </tr>
    </table>
    <p>TODO: Modify datetime fields so they don't include the "time"; right-align PO#, Vendor, etc.</p>
</fieldset>

<fieldset>
    <legend>Items On This Purchase Order</legend>
    <table>
        <tr class="table-header">
            <td>RPC #</td>
            <td>Description</td>
            <td>Wholesale Cost</td>
            <td>Qty to order</td>
            <td>Qty type</td>
            <td>TODO: CRUD options for each line</td>
        </tr>
        @for (int i = 0; i < Model.LineItems.Count(); i++) {
            <tr>
                <td>@Html.DisplayFor(model => model.LineItems[i].RecRPC)</td>
                <td>TODO: Add Item Description</td>
                <td>@Html.DisplayFor(model => model.LineItems[i].WholesaleCost)</td>
                <td>@Html.DisplayFor(model => model.LineItems[i].QtyOrdered)</td>
                <td>@Html.DisplayFor(model => model.LineItems[i].QtyTypeId)</td>
            </tr>
        }
    </table>

    <input type="button" value ="Print PO" />
    <input type="button" value="Add More Items to this PO" />
    <input type="button" value="Duplicate this PO" />
    <input type="button" value="Return to Main Menu"
        onclick="location.href='@Url.Action("Index","Home")'" />

</fieldset>