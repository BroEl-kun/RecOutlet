@model RecOutletWarehouse.Models.EVENT_TYPE

@{
    ViewBag.Title = "EditEvent";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@section tabnavigation{
    <ul class="nav clearfix">
        <li class="active">@Html.ActionLink("View Events", "ViewEvents")</li>
         <li>@Html.ActionLink("View Sale Pricing Information", "ViewSalesPrice")</li>
        <li>@Html.ActionLink("Add an Item to an Event", "AddItemsToEvent")</li>
    </ul>  
}

<h2>Edit Event</h2>
<ul class="field-validation-error">
    <li>
        TODO: This is an ideal candidate for conversion to a jQuery modal window.
    </li>
</ul>
@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Event Information</legend>

        <div class="editor-label">
            Type
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.EventTypeCode)
            @Html.ValidationMessageFor(model => model.EventTypeCode)
        </div>

        <div class="editor-label">
            Description
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.EventDescription)
            @Html.ValidationMessageFor(model => model.EventDescription)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "ViewEvents")
</div>
