@model IEnumerable<RecOutletWarehouse.Models.EVENT_TYPE>

@{
    ViewBag.Title = "View Events";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@section tabnavigation{
    <ul class="nav clearfix">
        <li class="active">@Html.ActionLink("View Events", "ViewEvents")</li>
         <li>@Html.ActionLink("View Sale Pricing Information", "ViewSalesPrice")</li>
        <li>@Html.ActionLink("Add an Item to an Event", "AddItemsToEvent")</li>
    </ul>  
}

<h2>View Events</h2>

<h3>
    @Html.ActionLink("Create", "CreateEvent")
</h3>
<h3>Search</h3>
@using (Html.BeginForm())
{
    <div class="search">
        Event description contains: @Html.TextBox("repNameSearch")
        <input type="submit" value="Search" />
    </div>
}
<div class="roloLinks pager">
    @Html.RolodexLinks(x => Url.Action("ViewEvents"))
</div>
<div class=" potable-area">
<table class="potable">
    <tr class="leftjust">
        <th>
            Type
        </th>
        <th>
            Description
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.EventTypeCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EventDescription)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditEvent", new { id = item.EventTypeCode })
        </td>
    </tr>
}

</table>
