@model RecOutletWarehouse.Models.VENDOR

@{
    ViewBag.Title = "EditVendor";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>@Html.DisplayFor(model => model.VendorName) - Modify Vendor Information</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.VendorID)
        <div class="col-left">
            <div class="field-cluster-header bold-italics">General</div>
            <div class="editor-label">
                Vendor Name<strong class="required">*</strong>
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.VendorName)
                @Html.ValidationMessageFor(model => model.VendorName)
            </div>

            <div class="editor-label">
                Contact Person
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.ContactName)
                @Html.ValidationMessageFor(model => model.ContactName)
            </div>

            <div class="editor-label">
                Primary Phone (Vendor/Contact)<strong class="required">*</strong>
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.ContactPhone)
                @Html.ValidationMessageFor(model => model.ContactPhone)
            </div>

            <div class="editor-label">
                Contact Person's Fax
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.ContactFax)
                @Html.ValidationMessageFor(model => model.ContactFax)
            </div>

            <div class="editor-label">
                Alternate Vendor Phone
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.AltPhone)
                @Html.ValidationMessageFor(model => model.AltPhone)
            </div>
            <div class="editor-label">
                Vendor's Website
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.VendorWebsite)
                @Html.ValidationMessageFor(model => model.VendorWebsite)
            </div>
        </div>
        <div class="col-right">
            <div class="field-cluster-header bold-italics">Address</div>
            <div class="editor-label">
                Vendor's Street Address
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.VendorAddress)
                @Html.ValidationMessageFor(model => model.VendorAddress)
            </div>

            <div class="editor-label">
                Address (Line 2)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.VendorAddress2)
                @Html.ValidationMessageFor(model => model.VendorAddress2)
            </div>

            <div class="editor-label">
                Vendor's City
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.VendorCity)
                @Html.ValidationMessageFor(model => model.VendorCity)
            </div>

            <div class="editor-label">
                Vendor's State (if applicable)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(model => model.VendorState)
                @Html.ValidationMessageFor(model => model.VendorState)
            </div>

            <div class="editor-label">
                Vendor's Country
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.VendorCountry)
                @Html.ValidationMessageFor(model => model.VendorCountry)
            </div>

            <div class="editor-label">
                Vendor's Postal/ZIP Code
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.VendorZip)
                @Html.ValidationMessageFor(model => model.VendorZip)
            </div>

        </div>

        <div class="clear-both form-footer">
            <input type="submit" value="Save Changes" class="button" />
            <input type="button" value="Cancel"  class="button"
                onclick="location.href='@Url.Action("BrowseVendors","Vendor")'" />
        </div>
}

