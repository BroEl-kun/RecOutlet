@model IEnumerable<RecOutletWarehouse.Models.VENDOR>

@{
    ViewBag.Title = "BrowseVendors";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>BrowseVendors</h2>

<p>
    @Html.ActionLink("Create New", "AddVendor")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.VendorName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ContactName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ContactPhone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ContactFax)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AltPhone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VendorAddress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VendorState)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VendorZip)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VendorWebsite)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.VendorName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ContactName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ContactPhone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ContactFax)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AltPhone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VendorAddress)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VendorState)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VendorZip)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VendorWebsite)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.VendorID }) |
            @Html.ActionLink("Details", "Details", new { id=item.VendorID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.VendorID })
        </td>
    </tr>
}

</table>
